@{
    List<university_app.Models.teacher> Teach_DDL = (List<university_app.Models.teacher>)ViewBag.teacherList;
 }
@{ 
    List<university_app.Models.room> Room_DDL = (List<university_app.Models.room>) ViewBag.RoomDlist;

}
@using (Html.BeginForm("inesrtCourse", "Courses", FormMethod.Post))

{
    <form action="">
        <label for="">Course Name</label>
        <input type="text" name="courseName" id="" placeholder="name" class="email" required>
        @*@Html.TextBoxFor(model=>Model.teachertname)*@

        <label for="">Course Code</label>
        <input type="text" name="CourseCode" id="" placeholder="Code" class="pass" required>

        <label for="">Course Teacher</label>
        <select class="form-control" name="TeacherID" required>
            <option value="">Please Select Teacher</option>
            @foreach (var item in Teach_DDL)
            {
                <option value="@item.ID">@item.teachertname</option>

            }


        </select>
        <br />
        <select class="form-control" name="RoomID" required>
            <option value="">Please Select Room</option>
            @foreach (var item in Room_DDL)
            {
                <option value="@item.Id">@item.Roomname</option>

            }


        </select>

        <br />
        <button type="submit" class="btn btn-success">Add Course</button>

    </form>

}