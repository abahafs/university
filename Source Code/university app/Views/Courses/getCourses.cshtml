@model List< university_app.Models.course>
<table cellpadding="0" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Code</th>
            <th>Teacher ID</th>
            <th>Room ID</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td valign="middle" data-header-title="Date"> <span>@item.Id</span></td>
            <td valign="middle" data-header-title="Price"><a href="/Courses/CourseDetails/@item.Id">@item.courseName</a></td>
            <td valign="middle" data-header-title="Supplement">@item.CourseCode</td>
            <td valign="middle" data-header-title="Supplement">@item.TeachId</td>
            <td valign="middle" data-header-title="Supplement">@item.RoomId</td>
            <td>
                <div class="text-center">

                    <a href="/Courses/DeleteCourse/@item.Id" class="glyphicon glyphicon-trash"></a>

                </div>
            </td>
        </tr>
        }

    </tbody>
</table>
